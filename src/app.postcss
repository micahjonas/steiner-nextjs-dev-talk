*/

@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
	--r-main-font: 'Inter';
	--r-heading-font: 'Inter';
	--r-code-font: 'JetBrains Mono';
	--r-link-color: aqua;
	--r-link-color-hover: aqua;
}

.hljs {
	background: none;
}

.hljs-title,
.hljs-keyword {
	font-weight: normal;
}

.reveal pre,
.reveal code {
	overflow: hidden !important;
}

.reveal pre {
	box-shadow: none;
}

h1,
h2,
h3,
h4,
h5 {
	text-align: left;
}

p {
	font-weight: 200;
	text-align: left;
}

ul, ol {
	font-weight: 200;
	text-align: left;
	font-size: 36px;
}

.reveal .slides section {
	display: flex !important;
	flex-direction: column;
}

.inline {
	@apply bg-neutral-700 rounded px-2 leading-snug
}